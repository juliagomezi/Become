<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardActivityDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coldwhite"
            app:cardCornerRadius="20dp"
            android:outlineSpotShadowColor="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:padding="8dp" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/coldwhite" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePic"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_user"
                    app:civ_border_width="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/profilePic"
                    app:layout_constraintHorizontal_bias="0.07"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/routineName">

                    <ImageButton
                        android:id="@+id/saveButton"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:tint="@color/black"
                        app:iconTint="@color/black"
                        app:srcCompat="@drawable/ic_bookmark"
                        tools:ignore="VectorDrawableCompat"
                        tools:layout_editor_absoluteX="31dp"
                        tools:layout_editor_absoluteY="25dp" />

                    <ImageButton
                        android:id="@+id/valorationIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="false"
                        android:tint="@color/gold75"
                        app:iconTint="@color/gold75"
                        app:srcCompat="@drawable/ic_star"
                        tools:ignore="VectorDrawableCompat"
                        tools:layout_editor_absoluteX="146dp"
                        tools:layout_editor_absoluteY="25dp" />

                    <TextView
                        android:id="@+id/valorationText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="XX" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8" />

                </LinearLayout>

                <TextView
                    android:id="@+id/routineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:text="@string/activity_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/profilePic"
                    app:layout_constraintHorizontal_bias="0.123"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.275" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>